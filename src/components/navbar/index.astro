---
import ModeToggle from "@/components/mode-toggle.astro";
import NavLinks from "./nav-links.astro";

const pathname = Astro.url.pathname;
const isExperienceActive = pathname.startsWith('/Portfolio/articles');
---

<nav
  class:list={[
    "screen-line-after sticky top-0 z-50 w-full bg-background/95 backdrop-blur supports-[backdrop-filter]:bg-background/60",
  ]}
>
  <div
    class="mx-auto flex h-10 max-w-3xl items-stretch justify-end px-4 md:border-x"
  >
    <div class="flex items-stretch justify-center">
      <NavLinks />
      {/* Wrapper for the toggle */}
      <div class="flex self-center w-12 items-center justify-center">
        <div id="theme-toggle-nudge-wrapper">
          <ModeToggle />
        </div>
      </div>
    </div>
  </div>
</nav>

<script>
  function handleNudge() {
    const wrapper = document.getElementById('theme-toggle-nudge-wrapper');
    if (!wrapper) return;
    if (window.location.hash === '#experience') {
      // Changed to specific arbitrary value left-[0.45rem] (equivalent to "1.8")
      wrapper.classList.add('relative', 'left-[0.45rem]');
    } else {
      wrapper.classList.remove('relative', 'left-[0.45rem]');
    }
  }

  // Run on initial page load and when the view changes
  document.addEventListener('DOMContentLoaded', handleNudge);
  document.addEventListener('viewchange', handleNudge);
  window.addEventListener('popstate', handleNudge);
</script>