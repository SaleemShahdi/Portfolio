---
import { NAV_LINKS } from "@/lib/constants/index";
import { cn } from "@/lib/utils";
---

<div class="flex h-full items-stretch justify-center">
  {
    NAV_LINKS.map(link => (
      <a
        href={link.href}
        data-nav-link={link.href}
        class={cn(
          "nav-link relative flex items-center justify-center px-3 text-xs font-medium transition-colors duration-150 lg:text-sm",
          
          // 1. TEXT COLOR
          // Uses the default text color (Black in Light Mode, White in Dark Mode)
          "text-primary",

          // 2. BACKGROUND HOVER
          // Uses the standard 'secondary' color (Light Grey in Light Mode, Dark Grey in Dark Mode)
          "hover:bg-secondary",

          // 3. SELECTED STATE
          // We no longer need to hijack the class. The script adds 'bg-secondary' automatically,
          // which is the exact Light Grey you want.
        )}
      >
        {link.label}
      </a>
    ))
  }
</div>