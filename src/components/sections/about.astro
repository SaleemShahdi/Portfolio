---
import Box from "@/components/box/index.astro";
import BoxHeader from "@/components/box/header.astro";
import BoxTitle from "@/components/box/title.astro";
import BoxContent from "@/components/box/content.astro";
import { PROFILE_INFO } from "@/lib/constants/profile";
import { Marked } from 'marked';

// We will parse the markdown content here directly
const renderedAboutContent = new Marked().parse(PROFILE_INFO.about);
---

<Box>
  <BoxHeader>
    <BoxTitle>About</BoxTitle>
  </BoxHeader>
  <BoxContent>
    <div class="prose" set:html={renderedAboutContent} />
  </BoxContent>
</Box>