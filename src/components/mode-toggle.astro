---
import { Moon, Sun } from "lucide-react";
import { cn, buttonVariants } from "@/lib/utils";
---

<button
  id="theme-toggle"
  class={cn(
    buttonVariants({ size: "icon", variant: "ghost" }),
    "cursor-pointer rounded-full"
  )}
>
  <Sun
    id="sun-icon"
    className="h-[1.2rem] w-[1.2rem] scale-100 rotate-0 transition-all dark:scale-0 dark:-rotate-90"
  />
  <Moon
    id="moon-icon"
    className="absolute h-[1.2rem] w-[1.2rem] scale-0 rotate-90 transition-all dark:scale-100 dark:rotate-0"
  />
  <span class="sr-only">Toggle theme</span>
</button>
<script is:inline>
  // This function sets up the theme toggle functionality.
  const setupThemeToggle = () => {
    const toggleButton = document.getElementById("theme-toggle");

    // Get the user's theme preference from localStorage or system settings.
    const getThemePreference = () => {
      if (typeof localStorage !== "undefined" && localStorage.getItem("theme")) {
        return localStorage.getItem("theme");
      }
      return window.matchMedia("(prefers-color-scheme: dark)").matches
        ? "dark"
        : "light";
    };

    // Apply the theme to the document and save it to localStorage.
    const setThemeAppearance = (theme) => {
      document.documentElement.classList[theme === "dark" ? "add" : "remove"]("dark");
      if (typeof localStorage !== "undefined") {
        localStorage.setItem("theme", theme);
      }
    };

    // Toggle the theme when the button is clicked.
    const toggleMode = () => {
      const isDarkMode = document.documentElement.classList.contains("dark");
      const newTheme = isDarkMode ? "light" : "dark";
      setThemeAppearance(newTheme);
    };

    // Add the click event listener to the button.
    if (toggleButton) {
      toggleButton.addEventListener("click", toggleMode);
    }
    
    // Set the initial theme on page load.
    const initialTheme = getThemePreference();
    setThemeAppearance(initialTheme);
  };

  // Run the setup function when the page content is loaded.
  document.addEventListener("DOMContentLoaded", setupThemeToggle);
</script>
